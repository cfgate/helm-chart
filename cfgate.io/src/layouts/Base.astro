---
import '@/styles/global.css'

interface Props {
  title: string
  description?: string
  ogImage?: string
  ogType?: string
  canonicalUrl?: string
}

const locale = Astro.currentLocale ?? 'en'
const langMap: Record<string, string> = { en: 'en', zh: 'zh-CN', hi: 'hi' }
const ogLocaleMap: Record<string, string> = { en: 'en_US', zh: 'zh_CN', hi: 'hi_IN' }

const {
  title,
  description = 'Kubernetes-native Cloudflare management.',
  ogImage = 'https://cfgate.io/og-card.png',
  ogType = 'website',
  canonicalUrl = 'https://cfgate.io/',
} = Astro.props
---

<!doctype html>
<html lang={langMap[locale] ?? 'en'} class='dark'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <meta name='description' content={description} />
    <meta property='og:title' content={title} />
    <meta property='og:type' content={ogType} />
    <meta property='og:url' content={canonicalUrl} />
    <meta property='og:description' content={description} />
    <meta property='og:site_name' content='cfgate' />
    <meta property='og:locale' content={ogLocaleMap[locale] ?? 'en_US'} />
    <meta property='og:image' content={ogImage} />
    <meta property='og:image:width' content='1200' />
    <meta property='og:image:height' content='630' />
    <meta property='og:image:alt' content='cfgate' />
    <meta name='twitter:card' content='summary' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
  </head>
  <body class='antialiased'>
    <slot />
  </body>
</html>
